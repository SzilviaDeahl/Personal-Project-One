extends ../../layout

block content
  div.mon
    h1 Monday's Dinner
    div.monday
      form(action='/planner/days/mon' method='post')
        p.ingr Enter ingredient: 
          input(id='search' type='search' name='search' placeholder='Search...' autofocus) 
          input(class='search' type='submit' value='search' )
        p
          a(href='/planner/days/mon/add') Eating Out/Delivery
        p.back
          a(href='/planner/index') Home
        p.next
          a(href='/planner/days/tues') Go To Next Day!  
      div.table  
        if Results
          table
            thead
              tr
                th Name
                th Image
                th Rating
                th Save
            tbody
              if Results
                each entry in Results
                  tr
                    td
                      //- = JSON.stringify(entry)
                      a(href='#{entry.WebURL}')= entry.Title
                    td
                      img.resize(src='#{entry.ImageURL}')
                    td= entry.StarRating.toFixed(1)
                    td
                      a(href='/planner/days/mon/add?recipe_id=#{entry.RecipeID}&image=#{entry.ImageURL}&title=#{entry.Title}&url=#{entry.WebURL}') Save
